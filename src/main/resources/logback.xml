<configuration>

    <!-- Appender del archivo(Para definir un tipo) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/app.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger raÃ­z(Aqui meto la referencia que defini del archivo) -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
